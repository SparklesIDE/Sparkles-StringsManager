<resources>
  
    <style name="AppTheme" parent="Theme.Material3.DynamicColors.Light">
        
    <!-- Phone Bars -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        
        <item name="android:windowLightStatusBar">true</item>
        
    <!-- ActionBar -->     
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        
    <!-- Others -->
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:windowActivityTransitions">true</item>
        
    </style>
    
    <!--- BottomSheet Theme -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <!--- CardView Style -->
    <style name="Gam.Card" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    
    <!-- Collapsing Toolbar Large Style -->
    <style name="Gam.Title" parent="@style/Widget.Material3.CollapsingToolbar.Large">
        <item name="fontFamily">@font/app_font</item>
    </style>
    <!-- Button Style -->
    <style name="Gam.Button" parent="@style/Widget.Material3.Button">
        <item name="fontFamily">@font/app_font</item>
    </style>
    
</resources>
